<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item" type="com.example.mssa.model.local.meetingroom.ReservationInfo" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reservation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp10"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reservation_room_name"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/dp14"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="bottom"
                android:text="@{item.name}"
                tools:text="대회의실1"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reservation_location"
                style="@style/TextStyle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/reservation_room_name"
                app:layout_constraintTop_toBottomOf="@+id/reservation_room_name"
                android:layout_marginTop="@dimen/dp1"
                android:text="@{item.location}"
                tools:text="MUSINSA 1 / B1"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reservation_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp12"
                android:layout_marginEnd="@dimen/dp12"
                android:src="@drawable/ic_question"
                />

            <View
                android:id="@+id/reservation_time_bg"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservation_location"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp35"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginEnd="@dimen/dp15"
                android:background="@color/very_light_pink"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/reservation_time_bg"
                app:layout_constraintTop_toBottomOf="@+id/reservation_time_bg"
                app:layout_constraintEnd_toEndOf="@+id/reservation_time_bg"
                android:layout_marginTop="@dimen/dp8"
                android:weightSum="10"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="13"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="14"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="16"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="17"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="18"
                    />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
