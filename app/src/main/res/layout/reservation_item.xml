<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item" type="com.example.mssa.model.local.meetingroom.ReservationInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reservation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reservation_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{item.name}"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reservation_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/reservation_room_name"
            app:layout_constraintTop_toBottomOf="@+id/reservation_room_name"
            android:text="@{item.location}"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/reservation_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
